<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Url Shortner</title>
  <link href="data:image/x-icon;base64," rel="icon" type="image/x-icon" />
  <script src="https://use.fontawesome.com/d10383beb6.js"></script>
  <link href="https://fonts.googleapis.com/css2?family=Grandstander&family=Itim&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
  <link rel="stylesheet" href="styles.css">
</head>

<body>
  <div class="container">
    <h1>URL SHORTNER <i class="fa fa-magic" aria-hidden="true"></i></h1>

    <% if(locals.error) { %>
    <p class="error btn-danger"> <%= error %> </p>
    <% } %>

    <form action="/" method="post">
      <div class="form-group">
        <label for="url"> Url: </label>
        <input type="url" class="form-control my-2" name="url" id="url" placeholder="Enter the URL to shorten">
      </div>
      <div class="form-group">
        <label for="slug"> Slug: </label>
        <input type="text" class="form-control my-2" name="slug" id="slug" placeholder="Slug for Url (Optional)">
      </div>
      <div class="button text-center">
        <button type="submit" class="btn my-2">Shorten Url</button>
      </div>
    </form>

    <div class="short-url">
      <% if(locals.short_url) {%>
      <a href="<%= short_url %>"><%= short_url %></a>
      <% } %>
    </div>
  </div>
</body>

</html>
